<div class="col-sm-4"></div>
<div class="col-sm-4">

	<div class="form-box">
		<div class="form-top">
			<div class="form-top-left">
				<h3>Thay đổi mất khẩu</h3>

			</div>
			<div class="form-top-right">
				<i class="fa fa-lock"></i>
			</div>
		</div>
		<div class="form-bottom">
			<form role="form" id="form" action="" method="post" class="login-form">
				<div class="form-group">
					<label class="sr-only" for="form-last-name">Username</label>
					<input type="text" name="username" placeholder="Username" class="form-last-name form-control" id="username">
				</div>
				

				<button type="submit" class="btn">Gửi yêu cầu</button>

			</form>
		</div>
	</div>

	{{#section 'js'}}
	<script>
		$(function () {


			$('#form').validate({
				rules: {
					username: {
						required: true,
						remote: {
							url: '/account/is-available2'
						}
						
					},
					
				},
				messages: {
					username: {
						required: 'Bạn không được để trống username',
						remote: 'Username không tồn tại',
					},
					
					
				},
				errorElement: 'small',
				errorClass: 'help-block text-danger',
				highlight: function (e) {
					$(e).removeClass('is-valid').addClass('is-invalid');
				},
				unhighlight: function (e) {
					$(e).removeClass('is-invalid').addClass('is-valid');
				}
			});
		})
	</script>
{{/section}}




</div>
<div class="col-sm-4"></div>
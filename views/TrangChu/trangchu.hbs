{{#section 'css'}}
{{#if message}}
<script>
	(function () { alert('{{message}}'); })();
</script>
{{/if}}
{{/section}}
<style>
	.shadow p {
		text-shadow: 4px 0px 22px rgba(12, 12, 12, 1);
	}

	.shadow b {
		text-shadow: 4px 0px 22px rgba(12, 12, 12, 1);
	}

	.head-article a {
		text-shadow: 4px 0px 22px rgba(12, 12, 12, 1);
		font-weight: bold;

		font-size: 20px;
		color: black;
	}

	.head-article {
		margin-bottom: 5px;
		margin-right: 15px;
	}

	.tag span {
		text-shadow: 4px 0px 22px rgb(253, 252, 252);
	}

	.tag {
		text-shadow: 4px 0px 22px rgb(253, 252, 252);
	}

	.ln a {
		text-shadow: none;
		font-size: 18px;
	}

	h2 {
		line-height: 1;
	}

	.ln {
		text-align: left;
	}

	b.cm {
		color: red;
	}
</style>
<div id="colorlib-page">
	<!--Menu-->
	{{> menu r=chuyenmuc daDangNhap=daDangNhap user=user}}
	<div class="row">
		<div class="col-md-9">
		</div>
		<div class="col-md-2">
			<div class="side animate-box">
				<form action="" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="key" id="search" placeholder="Enter to search...">
						<button type="submit" class="btn submit btn-primary"><i class="icon-search3"></i></button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div id="colorlib-main">
		<div class="colorlib-blog">
			<div class="container-wrap">
				<div class="row row-pb-lg">
					<div class="col-md-12 blog-slider">
						<div class="owl-carousel1">
							{{#each baivietnoibat as |bvnb|}}
							<div class="item">
								<div class="blog-entry">
									<div class="blog-img" style="background-image: url({{bvnb.anhDaiDien}});">
										<div class="desc desc2 text-center shadow">
											<p class="tag"><span>{{bvnb.tenChuyenMuc}}</span></p>
											<div class="desc-bottom">

												<div style="height: 77px; overflow: hidden; margin-bottom: 5px;">
													<h2 class="head-article"><a
															href="./chitietbaiviet/{{bvnb.idBaiViet}}">{{bvnb.tieuDe}}</a>
													</h2>
												</div>
												<div style="height: 120px; overflow: hidden; margin-bottom: 5px;">
													<p>Ngày đăng: {{formatDate bvnb.ngayDang}}</p>
													<p>Người đăng: {{ butDanh}}</p>
													<p style="text-shadow: 4px 0px 22px rgba(12, 12, 12, 1);">{{moTa}}
													</p>
													{{#if  premium}}
													<b>PREMIUM</b>
													{{/if}}
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							{{/each}}
						</div>
					</div>
				</div>
				<div class="row">
					<!--batdau-->
					<div class="col-md-12 padding-custom" id="bai-viet-moi-nhat">
						<hr>
						<h2 class="uppercase">BÀI VIẾT MỚI NHẤT</h2>
						<hr>
						<div class="row">
							{{#each baivietmoinhat as |bvmn|}}
							<div class="col-md-4 b" style="margin-bottom: 10px;height: 505px; overflow: hidden">
								<div class="blog-entry animate-box">
									<div class="blog-img blog-img2" style="background-image: url({{bvmn.anhDaiDien}});">
										<div class="desc text-center shadow">
											<p>Ngày đăng: {{formatDate bvmn.ngayDang}}</p>
											<p>Người đăng: {{butDanh}}</p>
											<p class="tag" style="color: red"><span>{{bvmn.tenChuyenMuc}}</span></p>
										</div>
									</div>
									<div class="desc">

										<div style="height: 100px; overflow: hidden;margin-bottom: 5px;">
											<h2 class="head-article ln">
												<a href="./chitietbaiviet/{{bvmn.idBaiViet}}">{{bvmn.tieuDe}}</a>
											</h2>
										</div>
										{{#if  premium}}
										<div class="alert alert-premium alert-dismissible tag">
											PREMIUM
										</div>
										{{/if}}
										{{#each tags}}
										<div class="alert alert-success alert-dismissible tag">
											<a href="/tag/{{idTag}}">{{tenTag}}</a>
										</div>
										{{/each}}
										<p>{{moTa}}</p>
									</div>
								</div>
							</div>
							{{/each}}
						</div>
						<!--ketthuc-->
					</div>
					<!--Batdau-->
					<div class="col-md-12 padding-custom" id="bai-viet-xem-nhieu-nhat">
						<hr>
						<h2 class="uppercase">BÀI VIẾT XEM NHIỀU NHẤT</h2>
						<hr>
						<div class="row">
							{{#each baivietxemnhieunhat }}
							<div class="row">
								<div class="col-md-12 blog-entry animate-box">
									<div class="row" style="max-height: 250px; overflow: hidden">
										<div class="col-md-4">
											<div class=" animate-box">
												<div class="blog-img blog-img2 shadow"
													style="background-image: url({{anhDaiDien}});">

												</div>
											</div>
										</div>
										<div class="col-md-8">
											<div class=" animate-box">
												<b class="cm"><a
														href="/chuyenmuc/{{idChuyenMuc}}"></a>{{tenChuyenMuc}}</b>
												<div style="height: 70px;overflow: hidden">
													<h2 class="head-article ln"><a
															href="./chitietbaiviet/{{idBaiViet}}">{{tieuDe}}</a></h2>
												</div>
												<div style="height: 150px;overflow: hidden">
													<p>Ngày đăng: {{formatDate ngayDang}}</p>
													<span>Người đăng: {{butDanh}}</span>
													{{#each tags}}
													<div class="alert alert-success alert-dismissible tag">
														<a href="/tag/{{idTag}}">{{tenTag}}</a>
													</div>
													{{/each}}
													{{#if  premium}}
													<div class="alert alert-premium alert-dismissible tag">
														PREMIUM
													</div>
													{{/if}}
													<p>{{moTa}}</p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							{{/each}}
						</div>
						<!--ketthuc      -->
					</div>
					<!--topchuyenmuc-->
					<div class="col-md-12 padding-custom" id="top-chuyen-muc">
						<hr>
						<h2 class="uppercase">TOP CHUYÊN MỤC</h2>
						<hr>
						{{#each top10chuyenmuc}}
						<div class="row">
							<div class="col-md-12  blog-entry animate-box">
								<div class="row" style="max-height: 250px; overflow: hidden">
									<div class="col-md-4">
										<div class=" animate-box">
											<div class="blog-img blog-img2 shadow"
												style="background-image: url({{anhDaiDien}});">

											</div>
										</div>
									</div>
									<div class="col-md-8">
										<div class=" blog-img2 animate-box" style="padding-bottom:0px">
											<b class="cm"><a href="/chuyenmuc/{{idChuyenMuc}}"></a>{{tenChuyenMuc}}</b>
											<div style="height: 70px;overflow: hidden">
												<h2 class="head-article ln"><a
														href="./chitietbaiviet/{{idBaiViet}}">{{tieuDe}}</a>
												</h2>
											</div>
											<div style="height: 150px;overflow: hidden">
												<p>Ngày đăng: {{formatDate ngayDang}}</p>
												<span>Người đăng: {{butDanh}}</span>
												{{#each tags}}
												<div class="alert alert-success alert-dismissible tag">
													<a href="/tag/{{idTag}}">{{tenTag}}</a>
												</div>
												{{/each}}
												{{#if  premium}}
												<div class="alert alert-premium alert-dismissible tag">
													PREMIUM
												</div>
												{{/if}}

												<p>{{moTa}}</p>
											</div>
										</div>
									</div>
								</div>

							</div>
						</div>
						{{/each}}
					</div>
					<!--endtopcm -->
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<div class="footer" style="height: 50px;">
</div>
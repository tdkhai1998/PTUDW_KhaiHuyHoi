<div id="addModal" class="modal fade">
	<div class="modal-dialog modal-login">
		<div class="modal-content">
			<div class="modal-header">

				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">
				<form method="POST">

					<div class="form-group">
						<input id="tenTag" name="tenTag" type="text" class="form-control" placeholder="Nhập Tag">
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-lg btn-block login-btn">Chấp
							nhận</button>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

<div class="col-md-9">
	<h3 style="margin: 0px 0px 20px 0px" class="animate-box">Quản Lí TAG</h3>
	<div>
		<button type="button" class="btn btn-primary animate-box" onclick="addTag_Click()">Thêm
			tag</button>
	</div>
	<p>
		<ul class="category list-group animate-box " id="TAG">
			{{#each this.tags}}
			<li class="list-group-item">
				<div class="d-flex justify-content-between">
					<a href="" class="d-flex align-items-center">{{tenTag}}</a>
					<div>
						<a class="btn btn-outline-danger" href="/admin/tags/delete?idTag={{idTag}}" role="button">
							<i class="fa fa-trash-o" aria-hidden="true"></i>
							Xóa</a>
						<a class="btn btn-outline-success" href="/admin/tags/update/{{idTag}}" role="button">Cập
							nhật</a>
					</div>
				</div>
			</li>





			{{/each}}
		</ul>
	</p>
</div>


<script type="text/javascript">
	function addTag_Click() {
		$('#addModal').modal();
	}
</script>
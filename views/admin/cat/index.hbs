

<div class="col-md-9">
	<h3 style="margin: 0px 0px 20px 0px" class="animate-box">Quản lí chuyên mục</h3>
	<div>
		<a role="button" class="btn btn-primary animate-box" href="/admin/categories/add" >Thêm
			chuyên mục</a>
	</div>
	 <div class="row d-flex justify-content-end ">
		 <div class="dropdown animate-box" style="z-index: 1001;">
		<button class="btn btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
				aria-expanded="false">
					Dropdown
				</button>
		<div class="dropdown-menu" aria-labelledby="triggerId">
			<a class="dropdown-item" href="#">Action</a>
			<a class="dropdown-item disabled" href="#">Disabled action</a>
			<h6 class="dropdown-header">Section header</h6>
			<a class="dropdown-item" href="#">Action</a>
			<div class="dropdown-divider"></div>
			<a class="dropdown-item" href="#">After divider action</a>
		</div>
	</div>
	 </div>
	
	<p>
		<ul class="category list-group animate-box " id="TAG">
			{{#each this.categories}}
			<li class="list-group-item">
				<div class="d-flex justify-content-between">
					<a href="" class="d-flex align-items-center">{{tenChuyenMuc}}</a>
					<div>
						<a class="btn btn-outline-danger" href="/admin/categories/delete/{{idChuyenMuc}}" role="button">
							<i class="fa fa-trash-o" aria-hidden="true"></i>
							Xóa</a>
						<a class="btn btn-outline-success" href="/admin/categories/update/{{idChuyenMuc}}" role="button">Cập
							nhật</a>
					</div>
				</div>
			</li>





			{{/each}}
		</ul>
	</p>
</div>



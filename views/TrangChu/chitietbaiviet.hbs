<style>
    .row-bottom-padded-md {
        padding-bottom: 0px;
        padding-left: 20px;
    }
</style>
<script>
    function myFunction(id) {
        document.getElementById(`${id}`).innerHTML += `
		  <form action="" method="POST">
			<div class="row form-group">
				<input type="hidden" name="idcmt" value="${id}">
				<div class="col-md-12">
					<textarea rows="5" style="background-color:white;" type="text" name="noiDung" id="noiDung" class="form-control" placeholder="Your cmt"></textarea>
				</div>
				<div class="col-md-3" style="margin-top:20px">
					<input style="color:black" type="submit" class=" btn btn-primary" value="Bình Luận">
				</div>
			</div>
			</form>`
    }
</script>

<div id="colorlib-page">
    {{> menu r=chuyenmuc daDangNhap=daDangNhap user=user}}
    <div id="colorlib-main">
        <div class="colorlib-blog">
            <div class="container-wrap">
                <div class="row">
                    <div class="col-md-9">
                        <div class="content-wrap" style="padding: 15px;background-color: white">
                            <div class="animate-box">
                                <article>
                                    <div class="blog-img" style="background-image: url('{{baiviet.anhDaiDien}}');"></div>
                                </article>
                                <div class="desc" style=" padding:30px;">
                                    <h2><a href="/chitietbaiviet/{{baiviet.idBaiViet}}"><b>{{baiviet.tieuDe}}</b></a></h2>
                                    <span>
										<a style="color: red" href="/chuyenmuc/{{baiviet.idChuyenMuc}}">
											{{baiviet.tenChuyenMuc}}
										</a>
									</span>
                                    <span>{{formatDate baiviet.ngayDang}}</span><br>
                                    <span>{{baiviet.butDanh}} </span><br>
                                    <hr> {{{baiviet.noiDung}}}
                                </div>
                            </div>
                            <hr>
                            <div id="tags" class="animate-box" style="margin-left:20px; margin-bottom: 20px;">
                                <b>Tags</b> {{#each baiviet.tags}}
                                <div class="alert alert-success alert-dismissible tag">
                                    <a href="/tag/{{idTag}}">{{tenTag}}</a>
                                </div>
                                {{/each}}
                            </div>
                            <div class="row row-bottom-padded-md">
                                <div class="col-md-12 animate-box">
                                    <h4 style="margin-left:20px ">{{socmt}} Comments</h4>
                                    {{#each comments}}
                                    <div class="review">
                                        <div class="user-img" style="max-width:50px;max-height: 50px;background-image: url(/images/acc.jpg); "></div>
                                        <div id='{{id}}' class="desc" id='{{id}}'>
                                            <h4>
                                                <span class="text-left">{{tenNguoiCmt}}</span>
                                                <span class="text-right">{{formatDate ngayBinhLuan}}</span>
                                            </h4>
                                            <p>{{noiDung}}</p>
                                            <p class="star">
                                                <span class="text-left"><a onclick="myFunction({{id}})"" class="reply"><i class="icon-reply2"></i></a></span>
                                            </p>
                                            {{#each child}}
                                            <div class="review">
                                                <div class="user-img" style=" max-width:50px;max-height: 50px;background-image: url(/images/acc.jpg)"></div>
                                                <div class="desc">
                                                    <h4>
                                                        <span class="text-left">{{tenNguoiCmt}}</span>
                                                        <span class="text-right">{{formatDate ngayBinhLuan}}</span>
                                                    </h4>
                                                    <p>{{noiDung}}</p>
                                                </div>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="row" id="comment">
                                <div class="col-md-12 animate-box">
                                    <h2 class="heading-2">Say something</h2>
                                    <form action="" method="POST">
                                        <input type="hidden" name="idcmt" value="">
                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <textarea style="background-color:white;" name="noiDung" id="noiDung" cols="30" rows="5" class="form-control" placeholder="Say something about us"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Post Comment" class="btn btn-primary">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 sticky-parent" style="background-color: white;padding-top:15px;">
                        <div class="sidebar" id="sticky_item">
                            <div class="side animate-box">
                                <form action="" method="POST">

                                    <div class="funkyradio">
                                        <div class="funkyradio-success">
                                            <input type="checkbox" name="tieuDe" id="checkbox1" checked/>
                                            <label for="checkbox1">Theo Tiêu Đề</label>
                                        </div>
                                        <div class="funkyradio-success">
                                            <input type="checkbox" name="moTa" id="checkbox2" />
                                            <label for="checkbox2">Theo Mô Tả</label>
                                        </div>
                                        <div class="funkyradio-success">
                                            <input type="checkbox" name="noiDung" id="checkbox3" />
                                            <label for="checkbox3">Theo Nội Dung</label>
                                        </div>
                                        <div class="funkyradio-success">
                                            <input type="checkbox" name="fulltext" id="checkbox" />
                                            <label for="checkbox">Full text search</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" name="type" value="dsfgh">
                                        <input type="text" class="form-control" name="key" id="search" placeholder="Enter to search...">
                                        <button type="submit" class="btn submit btn-primary"><i class="icon-search3"></i></button>
                                    </div>
                                </form>
                            </div>
                            <div class="side animate-box">
                                <h2 class="sidebar-heading">Cùng chuyên mục</h2>
                                {{#each cungchuyenmuc}}
                                <div class="f-blog">
                                    <a href="./{{idBaiViet}}" class="blog-img" style="background-image: url({{anhDaiDien}});">
                                    </a>
                                    <div class="desc">
                                        <h3><a href="./{{idBaiViet}}">{{tieuDe}}</a></h3>
                                        <p class="admin"><span>{{formatDate ngayDang}}</span></p>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('checkbox1').onclick = function() {
        if (this.checked) {
            document.getElementById('checkbox').checked = false;
        }
    }
    document.getElementById('checkbox2').onclick = function() {
        if (this.checked) {
            document.getElementById('checkbox').checked = false;
        }
    }
    document.getElementById('checkbox3').onclick = function() {
        if (this.checked) {
            document.getElementById('checkbox').checked = false;
        }
    }
    document.getElementById('checkbox').onclick = function() {
            if (this.checked) {
                document.getElementById('checkbox1').checked = false;
                document.getElementById('checkbox2').checked = false;
                document.getElementById('checkbox3').checked = false;
            }
        }
        // document.getElementsByTagName('img').style.object - fit = "cover";
</script>
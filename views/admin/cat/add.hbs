<div class="col-md-6">
    <form method="POST" action="/admin/categories/add">
        <div class="form-group">
            
            <div class="form-group">
                <label for="idCha">Chuyên mục cha</label>
                <select class="form-control" name="chuyenMucCha" id="chuyenMucCha">
                    <option value="">None</option>
                    {{#each categories}}
                    <option value="{{idChuyenMuc}}">{{tenChuyenMuc}}</option>
                    {{/each}}
                </select>
            </div>
            <input type="text" style="border-radius: 15px;" id="tenChuyenMuc" name="tenChuyenMuc" class="form-control"
                aria-describedby="Nhập Tên" placeholder="Tên chuyên mục" value="{{tag.tenChuyenMuc}}" autofocus>
            <div>
                <button type="submit" class="btn btn-outline-success animate-box">
                   <i class="fas fa-plus-circle"></i>
                    Update
                </button>
                <a href="/admin/categories" role="button" class="btn btn-outline-danger animate-box">
                    <i class="far fa-arrow-alt-circle-left"></i>
                    Hủy bỏ
                </a>
            </div>
        </div>
    </form>

</div>